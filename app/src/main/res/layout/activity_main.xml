<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tse_chen.renamedemo2.MainActivity"
    android:background="@drawable/ima_2">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="請輸入專案"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:capitalize="characters"
        android:inputType="textCapCharacters"
        android:digits="1234567890QAZWSXEDCRFVTGBYHNUJMIKOLP"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:imeOptions="actionDone"/>

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/MainSP"
        android:clickable="false"
        android:contextClickable="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:popupBackground="@drawable/ima_2"
        android:layout_below="@+id/GroupText"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:id="@+id/SubSP"
        android:popupBackground="@drawable/ima_2"
        android:layout_below="@+id/MainSP"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RENAME"
        android:id="@+id/tue"
        android:layout_marginEnd="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Ktext" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:id="@+id/openCamera"
        android:layout_alignTop="@+id/tue"
        android:layout_alignParentStart="true"
        android:layout_marginStart="54dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ktext"
        android:hint="請輸入色溫"
        android:textColorHint="#ffffffff"
        android:inputType="number|numberDecimal"
        android:textIsSelectable="false"
        android:textColor="#ffffffff"
        android:layout_above="@+id/tue"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionDone"
        android:layout_alignStart="@+id/openCamera" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LuxText"
        android:hint="請輸入照度"
        android:textColorHint="#ffffffff"
        android:inputType="number|numberDecimal"
        android:textColor="#ffffffff"
        android:layout_above="@+id/Ktext"
        android:imeOptions="actionDone"
        android:layout_alignStart="@+id/openCamera" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GroupText"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="輸入月日分組，例0201A"
        android:capitalize="characters"
        android:singleLine="true"
        android:inputType="textCapCharacters"
        android:imeOptions="actionDone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="照度"
        android:id="@+id/textView"
        android:textColor="#ff0202"
        android:textSize="20sp"
        android:layout_alignTop="@+id/LuxText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="色溫"
        android:id="@+id/textView2"
        android:textColor="#ff0404"
        android:textSize="20sp"
        android:layout_below="@+id/LuxText"
        android:layout_alignParentStart="true" />

</RelativeLayout>
